<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="AsapTasks.Pages.ProjectViewTabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
    BackgroundColor="{StaticResource color_White}">
    <!--  Pages can be added as references or inline  -->
    <ContentPage Title="Tasks">
        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">

            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <ScrollView Grid.Row="0">
                <StackLayout Margin="20,5,20,5">
                    <Frame Margin="1,5,1,5" CornerRadius="20">
                        <StackLayout>
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Medium}"
                                Text="Task Name"
                                TextColor="{StaticResource color_SpaceCadet}" />
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Small}"
                                Text="Task Descption: one complete line"
                                TextColor="{StaticResource color_DimGray}" />
                        </StackLayout>
                    </Frame>
                    <Frame Margin="1,5,1,5" CornerRadius="20">
                        <StackLayout>
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Medium}"
                                Text="Task Name"
                                TextColor="{StaticResource color_SpaceCadet}" />
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Small}"
                                Text="Task Descption: one complete line"
                                TextColor="{StaticResource color_DimGray}" />
                        </StackLayout>
                    </Frame>
                    <Frame Margin="1,5,1,5" CornerRadius="20">
                        <StackLayout>
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Medium}"
                                Text="Task Name"
                                TextColor="{StaticResource color_SpaceCadet}" />
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Small}"
                                Text="Task Descption: one complete line"
                                TextColor="{StaticResource color_DimGray}" />
                        </StackLayout>
                    </Frame>
                    <Frame Margin="1,5,1,5" CornerRadius="20">
                        <StackLayout>
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Medium}"
                                Text="Task Name"
                                TextColor="{StaticResource color_SpaceCadet}" />
                            <Label
                                FontFamily="{StaticResource TextFont}"
                                FontSize="{StaticResource Font_Small}"
                                Text="Task Descption: one complete line"
                                TextColor="{StaticResource color_DimGray}" />
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </ScrollView>
            <StackLayout
                Grid.Row="1"
                BackgroundColor="{StaticResource color_SpaceCadet}"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="Fill">
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*" />
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="5*" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Grid.Column="0"
                        Margin="20,5,5,5"
                        FontFamily="{StaticResource TitleFont}"
                        FontSize="{StaticResource Font_Large}"
                        HorizontalOptions="Start"
                        Text="Project Name"
                        TextColor="{StaticResource color_White}"
                        VerticalOptions="Center" />
                    <Button
                        x:Name="btn_addTask"
                        Grid.Column="2"
                        Margin="5,5,20,5"
                        Padding="20,0,20,0"
                        BackgroundColor="{StaticResource color_GunMetal}"
                        BorderColor="{StaticResource color_DimGray}"
                        BorderRadius="25"
                        BorderWidth="3"
                        FontFamily="{StaticResource TextFont}"
                        FontSize="{StaticResource Font_Medium}"
                        HorizontalOptions="End"
                        Text="Add Task"
                        TextColor="{StaticResource color_White}"
                        VerticalOptions="Center" />
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage>
    <ContentPage Title="Issues">
        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">

            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

